{
  "name": "ssr",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "fastify": "*",
    "inferno": "*",
    "inferno-server": "*",
    "superagent": "*"
  },
  "devDependencies": {
    "standard": "*",
    "prettier": "*",
    "nodemon": "*",
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/node": "*",
    "@babel/preset-env": "*",
    "@types/node": "^14.6.4",
    "babel-plugin-inferno": "*"
  },
  "scripts": {
    "dev": "sh etc/scripts/dev.sh",
    "clinic": "sh etc/scripts/clinic.sh",
    "fix": "standard --fix",
    "test": "standard",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "prettier": {
    "endOfLine": "lf",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 120,
    "trailingComma": "none",
    "singleQuote": true,
    "semi": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "jsxBracketSameLine": true
  }
}
